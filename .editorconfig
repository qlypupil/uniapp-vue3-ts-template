root = true

[*] # 表示所有文件适用
charset = utf-8 # 字符集
indent_style = space # 缩进风格
indent_size = 2 # 缩进大小
end_of_line = lf # 换行符
insert_final_newline = true # 始终在文件末尾插入一个新行
trim_trailing_whitespace = true # 是否删除行末的空格

[*.md] # 表示所有md文件适用
max_line_length = off # 关闭行最大长度限制
trim_trailing_whitespace = false # 不删除行末的空格